{
  "name": "payback",
  "private": true,
  "version": "1.0.0",
  "description": "PayBack monorepo",
  "packageManager": "bun@1.3.9",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev --filter=@payback/web --filter=@payback/backend",
    "dev:web": "turbo dev --filter=@payback/web",
    "dev:backend": "turbo dev --filter=@payback/backend",
    "dev:ios": "echo \"Open apps/ios/PayBack.xcodeproj in Xcode to run the iOS app\"",
    "build": "turbo build",
    "build:web": "turbo build --filter=@payback/web",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:web": "turbo test --filter=@payback/web",
    "test:backend": "turbo test --filter=@payback/backend",
    "test:e2e": "turbo test:e2e",
    "ci": "turbo lint typecheck --continue && bun run format:check && turbo test build --continue",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "deploy:web": "vercel deploy --prod",
    "deploy:backend": "turbo deploy --filter=@payback/backend"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/node": "^22.13.10",
    "eslint": "^9.21.0",
    "globals": "^15.15.0",
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.25.0",
    "vitest": "^3.0.9"
  }
}
