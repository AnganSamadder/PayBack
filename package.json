{
  "name": "payback",
  "private": true,
  "version": "1.0.0",
  "description": "PayBack monorepo",
  "packageManager": "bun@1.3.9",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --filter=@payback/web",
    "dev:all": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@payback/web",
    "dev:backend": "turbo run dev --filter=@payback/backend",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "ci": "bun run lint && bun run typecheck && bun run test && bun run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/node": "^22.13.10",
    "eslint": "^9.21.0",
    "globals": "^15.15.0",
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.25.0",
    "vitest": "^3.0.9"
  }
}
