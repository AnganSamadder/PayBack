{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "build/**",
        ".turbo/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": [
        "^typecheck"
      ],
      "outputs": []
    },
    "test": {
      "dependsOn": [
        "^test"
      ],
      "outputs": []
    },
    "test:e2e": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "playwright-report/**",
        "test-results/**"
      ]
    },
    "ci": {
      "dependsOn": [
        "lint",
        "typecheck",
        "test",
        "build"
      ],
      "outputs": []
    }
  }
}
